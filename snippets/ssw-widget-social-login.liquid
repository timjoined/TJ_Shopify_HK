{% comment %}
/**************************************************
* DO NOT MODIFY THIS FILE!!!                      *
* IT WILL BE OVERWRITTEN BY UPDATES FROM GROWAVE! *
**************************************************/
{% endcomment %}
{% assign ssw_manual_uninstall = shop.metafields.ssw['manual_uninstall'] | plus: 0 %}
{% assign ssw_script_tags_allowed = shop.metafields.ssw['script_tags_allowed'] | plus: 0 %}
{% if content_for_header contains 'ssw-empty.js' or ssw_manual_uninstall == 1 or ssw_script_tags_allowed != 1 %}
{% unless customer %}
<div class='ssw-social-login-widget'>
    <div class="ssw-socialconnect">
        {% render 'ssw-social-buttons' %}
        <div class="ssw-simple-login{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %} ssw-social-btn {% endif %}">
            <a title="{{ 'socialshopwave.log_in' | t }}" href="#" onclick="event.preventDefault()" data-toggle="ssw-modal" data-target="#login_modal" onclick="trackShopStats('login_popup_view', 'all')">
                <i class="ssw-icon-at"></i>
                {% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_simple' | t }}</span>{% endif %}
            </a>
        </div>
    </div>
</div>
{% endunless %}
{% endif %}