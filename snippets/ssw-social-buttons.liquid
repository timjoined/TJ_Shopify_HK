  {% capture _ %}{% increment service_count %}{% endcapture %}
{% endif %}
{% endcapture %}
{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' and service_count > 3 %}
  {%  assign additional_class = 'ssw-social-btn ssw-btn-medium' %}
  {% assign social_buttons = social_buttons | replace: 'ssw-social-btn', 'ssw-social-btn ssw-btn-medium' %}
{% endif %}
