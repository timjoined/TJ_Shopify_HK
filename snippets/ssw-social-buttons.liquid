{% endif %}
{% if shop.metafields.ssw.settings.yahoo_login == 1 %}
  <div class="ssw-yconnect {{additional_class}}"><a title="{{ 'socialshopwave.sign_in_yahoo' | t }}" href="javascript://"><i class="ssw-icon-yahoo"></i>{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_yahoo' | t }}</span>{% endif %}</a></div>
  {% capture _ %}{% increment service_count %}{% endcapture %}
{% endif %}
{% if shop.metafields.ssw.settings.tumblr_login == 1 %}
  <div class="ssw-tmconnect {{additional_class}}"><a title="{{ 'socialshopwave.sign_in_tumblr' | t }}" href="javascript://"><i class="ssw-icon-tumblr"></i>{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_tumblr' | t }}</span>{% endif %}</a></div>
