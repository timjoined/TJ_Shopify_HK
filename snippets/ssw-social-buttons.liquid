{% endcomment %}
{%  assign additional_class = '' %}
{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}
  {%  assign additional_class = 'ssw-social-btn' %}
{% endif %}
{%  assign service_count = 0 %}

{% capture social_buttons %}
{% if shop.metafields.ssw.settings.facebook_login == 1 %}
  <div class="ssw-fbconnect {{additional_class}}"><a title="{{ 'socialshopwave.sign_in_facebook' | t }}" href="javascript://"><i class="ssw-icon-facebook"></i>{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_facebook' | t }}</span>{% endif %}</a></div>
  {% capture _ %}{% increment service_count %}{% endcapture %}
{% endif %}
{% if shop.metafields.ssw.settings.twitter_login == 1 %}
  <div class="ssw-twconnect {{additional_class}}"><a title="{{ 'socialshopwave.sign_in_twitter' | t }}" href="javascript://"><i class="ssw-icon-twitter"></i>{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_twitter' | t }}</span>{% endif %}</a></div>
